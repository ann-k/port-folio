<style media="screen">
  nav { display: none; }
</style>

<div class="content content-in-show">
  <div class="editorjs editorjs-in-show" id="editorReadOnly" data-contents="<%= @content.to_json %>"></div>
  <div class="projects-container projects-container-in-show">
    <% if @content.contentable_type == "Portfolio" %>
      <% @content.contentable.projects.ordered_by_position.each do |project| %>
        <div>
          <%= link_to(project.content) do %>
            <% if project.cover? %><%= image_tag(project.cover.url)%>
            <% else %><%= image_tag "default.png" %>
            <% end %>
            <h3><%#= project.project_in_portfolios.where(portfolio_id: @content.contentable.id) %><%= project.name %></h3>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= button_to(root_path, method: "get", class:"button button-big button-icon-and-words", id:"made_with_button") do %>
    <h3>Сделано в</h3>
    <%= image_tag("logo/short_black.svg") %>
  <% end %>
</div>
